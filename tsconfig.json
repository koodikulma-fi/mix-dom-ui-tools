{
  "compilerOptions": {
    "target": "es2015",
    "esModuleInterop": false,
    "module": "es6",
    "outDir": "./dist/modules",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "./dist/dts",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "MixDOM.def",
    "jsxFragmentFactory": "MixDOM.Fragment"
  },
  "include": ["./src/index.ts"],
  // "include": ["./src/*.ts", "./src/*.tsx", "./src/*/*.ts", "./src/*/*.tsx"],
  "exclude": ["node_modules/*"]
}
